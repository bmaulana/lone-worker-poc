        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FFAE4343"  />

            </LinearGradientBrush>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="94*"/>
            <ColumnDefinition Width="347*"/>
            <ColumnDefinition Width="58*"/>
        </Grid.ColumnDefinitions>
        <Button Content="PANIC" Height="72" HorizontalAlignment="Left" Margin="76,219,0,0" x:Name="PanicButton" VerticalAlignment="Top" Width="160" Background="#FFE00F0F" FontSize="21.333" Grid.Column="1"  />
